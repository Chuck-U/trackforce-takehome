{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "log": true,
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}"
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9003
        },
        {
            "name": "Debug Pest Tests",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/vendor/bin/pest",
            "args": [
                "${file}"
            ],
            "cwd": "${workspaceFolder}",
            "port": 9003,
            "env": {
                "XDEBUG_MODE": "debug"
            }
        },
        {
            "name": "Debug Artisan Command",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/artisan",
            "args": [],
            "cwd": "${workspaceFolder}",
            "port": 9003,
            "env": {
                "XDEBUG_MODE": "debug"
            }
        },
        {
            "name": "Debug Current Test File",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/vendor/bin/pest",
            "args": [
                "${relativeFile}"
            ],
            "cwd": "${workspaceFolder}",
            "port": 9003,
            "env": {
                "XDEBUG_MODE": "debug",
                "XDEBUG_CONFIG": "idekey=VSCODE"
            }
        }
    ]
}

